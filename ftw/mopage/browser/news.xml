<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<import xmlns:tal="http://xml.zope.org/namespaces/tal"
        tal:attributes="partner view/partner;
                        partnerid view/partnerid;
                        passwort view/password"
        importid="1">
  <tal:items repeat="item view/items">
    <item status="1" suchbar="1"
          tal:attributes="datumvon item/datumvon;
                          datumbis item/datumbis">
      <id tal:content="item/id">01</id>
      <titel tal:content="item/title">Titel der Nachricht</titel>
      <textmobile tal:content="item/text_short">Nachrichtentext</textmobile>
      <textlead tal:condition="item/description"
                tal:content="item/description">Leadtext</textlead>
      <url_bild tal:condition="item/image_url"
                tal:content="item/image_url">http://path.to/image.jpg</url_bild>
      <tal:categories repeat="category item/categories">
        <rubrik tal:content="category">Informatik</rubrik>
      </tal:categories>
      <text tal:condition="item/text"
            tal:content="structure item/text">Das ist der längere Text für online</text>
      <url_web tal:content="item/url">http://www.derlink.ch</url_web>
    </item>
  </tal:items>
</import>
